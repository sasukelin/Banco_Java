import java.util.HashMap;
import java.util.Scanner;


@SuppressWarnings("ALL")
public class Main {

    public static void main(String[] args) {
        HashMap<String, Double> cuentas = new HashMap<>();
        Scanner scanner = new Scanner(System.in);

        int option = -1;
        int opcion = -1;
        String numeroCuenta;
        double saldo = 0;
        System.out.println("Bienvenido a la Aplicación Bancaria Wolf Bank");
        while (option != 0) {
            System.out.println("Por favor, elija una opción:");
            System.out.println("1. Crear una cuenta");
            System.out.println("2. Ingresa a tu cuenta");


            option = scanner.nextInt();

            switch (option) {
                case 1:
                    System.out.println("Ingrese su usuario:");
                    numeroCuenta = scanner.next();
                    if (!cuentas.containsKey(numeroCuenta)) {
                        System.out.println("Ingrese su contraseña:");
                        saldo = scanner.nextDouble();
                        cuentas.put(numeroCuenta, saldo);
                        System.out.println("¡Cuenta creada exitosamente!");
                    } else {
                        System.out.println("Ya existe una cuenta con este número.");
                    }
                    break;

            }
            switch (option) {
                case 2:
                    System.out.println("ingresa tu usuario");
                 String  User= scanner.next();
                System.out.println("ingresa Contraseña ");
                String  Password= scanner.next();;
               String usuario="JuanDa";
               String Contraseña="12345";
                if (User.equals(usuario) && Password.equals(Contraseña)){
               System.out.println("Bienvenido "+usuario);
               while (opcion != 0) {
//sw case
               System.out.println("Por favor, elija una opción:");

               System.out.println("1. Consultar saldo");
               System.out.println("2. Depositar dinero");
               System.out.println("3. Retirar dinero");
               System.out.println("4. Realizar transacción");
               System.out.println("0. Salir");

               opcion = scanner.nextInt();



               switch (opcion) {

                case 1:
                    System.out.println("Ingrese su número de cuenta:");
                    numeroCuenta = scanner.next();
                    if (cuentas.containsKey(numeroCuenta)) {
                        saldo = cuentas.get(numeroCuenta);
                        System.out.println("Su saldo es: " + saldo);
                    } else {
                        System.out.println("Cuenta no encontrada.");
                    }
                    break;
                     case 2:
                    System.out.println("Ingrese su número de cuenta:");
                    numeroCuenta = scanner.next();
                    if (cuentas.containsKey(numeroCuenta)) {
                        System.out.println("Ingrese la cantidad a depositar:");
                        double cantidadDeposito = scanner.nextDouble();
                        saldo = cuentas.get(numeroCuenta) + cantidadDeposito;
                        cuentas.put(numeroCuenta, saldo);
                        System.out.println("¡Depósito realizado exitosamente!");
                    } else {
                        System.out.println("Cuenta no encontrada.");
                    }
                    break;
                    case 3:
                    System.out.println("Ingrese su número de cuenta:");
                    numeroCuenta = scanner.next();
                    if (cuentas.containsKey(numeroCuenta)) {
                        System.out.println("Ingrese la cantidad a retirar:");
                        double cantidadRetiro = scanner.nextDouble();
                        saldo = cuentas.get(numeroCuenta);
                        if (cantidadRetiro <= saldo) {
                            saldo -= cantidadRetiro;
                            cuentas.put(numeroCuenta, saldo);
                            System.out.println("¡Retiro realizado exitosamente!");
                        } else {
                            System.out.println("Fondos insuficientes.");
                        }
                    } else {
                        System.out.println("Cuenta no encontrada.");
                    }
                    break;
                    case 4:
                    System.out.println("Ingrese su número de cuenta:");
                    numeroCuenta = scanner.next();
                    if (cuentas.containsKey(numeroCuenta)) {
                        System.out.println("Se ha encontrado su cuenta ");
                        saldo = cuentas.get(numeroCuenta);
                        System.out.println("Su saldo es: " + saldo);
                        System.out.println("Ingrese la cuenta destinataria para la transacción:");
                        double cantidadTransaccion = scanner.nextDouble();
                        saldo = cuentas.get(numeroCuenta) + cantidadTransaccion;

                        cuentas.put(numeroCuenta, saldo);
                        System.out.println("Cuenta encontrada, ingrese el valor a enviar");
                        saldo = cuentas.get(numeroCuenta) +(cantidadTransaccion + saldo);
                    } else {
                        System.out.println("Cuenta no encontrada, no se puede realizar el envio.");
                    }

                    break;
                      case 0:
                    System.out.println("¡Gracias por usar la Aplicación Bancaria en Java!");
                    break;
                    default:
                    System.out.println("Opción inválida.");
                }
               System.out.println();
               }} else if (User.equals(usuario) && !Password.equals(Contraseña)) {
            System.out.println("Contraseña incorrecta");
             } else if (!User.equals(usuario) && Password.equals(Contraseña)) {
            System.out.println("El usuario no existe");

        }
}
        }
    }
}
